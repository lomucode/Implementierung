<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
       

        // Load the Visualization API and the piechart package.
        google.load('visualization', '1.0', { 'packages': ['corechart'] });

        // Set a callback to run when the Google Visualization API is loaded.
        google.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {

            // Create the data table.
            var data = google.visualization.arrayToDataTable([
                ['Sportart', 'Anzahl Teilnehmer'],
                ['Laufen', 321],
                ['Spazieren', 122],
                ['Fahrrad fahren', 452],
                ['Schwimmen', 22],
                ['Hiking', 7],
                ['Indoor-Biking', 4]
                

            ]);
            // Create the data table.
            var data2 = google.visualization.arrayToDataTable([
                ['Woche', 'Distanz (km)',],
                ['1', 1000],
                ['2', 117],
                ['3', 660],
                ['4', 5000]
            ]);


            var data3 = google.visualization.arrayToDataTable([
                ['Tag', 'Distanz (km)',],
                ['Fr', 10.00,],
                ['Sa', 20.70,],
                ['So', 34.50,],
                ['Mo', 13.30,],
                ['Di', 41.50,],
                ['Mi', 1.20,],
                ['Do', 38.41,]

            ]);

            var data4 = google.visualization.arrayToDataTable([
                ['Sportart', 'Distanz (km)'],
                ['Laufen', 2321],
                ['Spazieren', 1122],
                ['Fahrrad fahren', 4452],
                ['Schwimmen', 222],
                ['Hiking', 27],
                ['Indoor-Biking', 44]


            ]);

            // Set chart options
            var options = {
                'title': 'Top Sportarten (nach Teilnehmer*innen)',
                'backgroundColor': 'transparent',
                'width': 900,
                'height': 500
            };
            // Set chart options
            var options2 = {
                title: 'Erreichte Distanz (nach Wochen)',
                hAxis: { title: 'Woche', titleTextStyle: { color: '#333' } },
                vAxis: { minValue: 0 },
                backgroundColor: 'transparent',
                width: '100 %',
                height: '500px'

            };
            // Set chart options
            var options3 = {
                title: 'Letzte Aktivität- Gesamt (7 Tage)',
                vAxis: { minValue: 0 },
                backgroundColor: 'transparent',
                width: '100 %',
                height: '500px'

            };
            // Set chart options
            var options4 = {
                'title': 'Top Sportarten (nach Distanz (km))',
                'backgroundColor': 'transparent',
                'width': 900,
                'height': 500
            };


            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
            var chart2 = new google.visualization.AreaChart(document.getElementById('chart_div2'));
            chart2.draw(data2, options2);
            var chart3 = new google.visualization.AreaChart(document.getElementById('chart_div3'));
            chart3.draw(data3, options3);
            var chart4 = new google.visualization.PieChart(document.getElementById('chart_div4'));
            chart4.draw(data4, options4);
       

        }
   


    </script>
</head>

