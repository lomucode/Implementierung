
@model testcsharp.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<link href="~/css/login.css" rel="stylesheet" />
<div class="container-fluid" style="background-color: #F4F8FB;">
    <div class="row" style="margin-top: 30px; margin-bottom: 30px;">
        <div class="col-6 d-none d-lg-block">
            <img src="~/lib/images/running.png" alt="running" style="width:70%; height:auto; padding:50px;" />
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6" style="padding: 50px; margin-top: 30px">
            <h1 style="font-size: 39px; font-weight: bold;">Login</h1>
            
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">E-Mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Passwort</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>

            </div>
            <button style="width: 144px !important; font-weight: normal;"type="submit" class="btn-primary login-button">Ich bin zurück!</button>
            <div class="fp">  <a class="forgetpw" <!--asp-action="ForgotPassword""-->Passwort vergessen?</a> </div>
        </form>

        </div>
    </div>
   

</div>