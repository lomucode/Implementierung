<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - testcsharp</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="~/css/navbar.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-white">
			<div class="container-fluid logo">
				<div style="height: 80px; border-top: 40px; display: flex; flex-direction: column; align-items: start;
			justify-content: center;">
					<p style="color: black; line-height: 0.8em; font-size: 24px; font-weight: 200;"><a
							style="color: black; text-decoration: none;" href="@Url.Action("Index")">Europe Day</a></p>
					<p style="color: black; line-height: 0.0em; font-size: 24px; font-weight: 700;"><a
							style="color: black; text-decoration: none;" href="@Url.Action("Index")">ATHENATHON</a></p>
				</div>
				<button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse"
					data-bs-target="#main_nav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="main_nav">
					<ul class="navbar-nav">
						<li class="nav-item dropdown has-megamenu">
							<a style="font-weight: bold; font-size: 16px;" class="nav-link dropdown-toggle uni" href="#"
								data-bs-toggle="dropdown">Die Universitäten</a>
							<div class="dropdown-menu megamenu" role="menu" style="border:none;">
								<div class="row g-3">
									<div class="col-12">
										<div class="col-megamenu">
											<ul class="list-unstyled">
												<li><a href="@Url.Action("HellenicMediterraneanUniversity")">Hellenicdeinemama
														Mediterranean University</a></li>
												<li><a href="@Url.Action("ThePolytechnicInstituteofPorto")">The
														Polytechnic Institute of Porto</a></li>
												<li><a href="@Url.Action("UniSiegen")">University of Siegen</a></li>
												<li><a href="@Url.Action("UniMaribor")">University of Maribor</a></li>
												<li><a href="@Url.Action("Unicusano")">UNICUSANO</a></li>
												<li><a href="@Url.Action("UniOrleans")">University of Orléans</a></li>
												<li><a href="@Url.Action("VilniusTech")">Vilnius Tech</a></li>
											</ul>
										</div>
									</div>
									<div class="col-1">
										<img src="~/lib/images/_universitaeten/uni.png" alt="uni" width="250px;">
									</div>
								</div>
							</div>
						</li>
						<li style="font-weight: bold; font-size: 25;" class="nav-item"> <a class="nav-link athenathon"
								href="@Url.Action("Athenathon")">Über Athenathon</a> </li>
						<li style="font-weight: bold; font-size: 25;" class="nav-item"><a class="nav-link faq"
								href="@Url.Action("FAQ")">FAQ</a></li>
						<li style="font-weight: bold; font-size: 25;" class="nav-item dropdown has-megamenu">
							<img src="~/lib/images/_sprachen/germany.png" class="german-flag"
								style="float:left; margin-top: 10px; margin-right: 12px;" alt="german-flag" width="20px"
								height="20px">
							<a class="nav-link dropdown-toggle germany" href="#"
								data-bs-toggle="dropdown">Deutschland</a>
							<div class="dropdown-menu megamenu" role="menu" style="border:none;">
								<div class="row g-3">
									<div class="col-12">
										<div class="col-megamenu">
											<ul class="list-unstyled">
												<li><img src="~/lib/images/_sprachen/uk.png" alt="uk" width="20px;"><a
														href="#">English</a></li>
												<li><img src="~/lib/images/_sprachen/france.png" alt="france"
														width="20px;"><a href="#">Français</a></li>
												<li><img src="~/lib/images/_sprachen/portugal.png" alt="portugal"
														width="20px;"><a href="#">Português</a></li>
												<li><img src="~/lib/images/_sprachen/lithuania.png" alt="lithuania"
														width="20px;"><a href="#">Lietuvis</a></li>
												<li><img src="~/lib/images/_sprachen/slovenia.png" alt="slovenia"
														width="20px;"><a href="#">Slovenščina</a></li>
												<li><img src="~/lib/images/_sprachen/italy.png" alt="italy"
														width="20px;"><a href="#">Italiano</a></li>
												<li><img src="~/lib/images/_sprachen/greece.png" alt="greece"
														width="20px;"><a href="#">Ελληνικά</a></li>
											</ul>
										</div>
									</div>
								</div>
							</div>
						</li>
					</ul>
					<ul class="navbar-nav ms-auto">
						<li class="nav-item app d-none d-xl-block"><a
								href="https://apps.apple.com/de/app/strava-laufen-radfahren/id426826309"
								target="_blank">
								<form style="border-color: black; border-radius: 19px;" class="btn btn-dark button-app"
									type="submit">Hol dir die App</form>
							</a></li>
						<li class="nav-item login"><a href="login.html"><button
									style="border-color: #D5D5D5; border-radius: 19px;" type="button"
									class="btn btn-outline-dark">Anmelden</button></a></li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div style="height: 20px;"></div>
	<div>@RenderBody()</div>

	</div>

	<footer>
		<div class="footer-container">
			<div class="footer-left-content">
				&copy; 2021 - ATHENA European University - All rights reserved.

			</div>
			<div class="footer-right-content">
				<a href="@Url.Action("Impressum")">Impressum</a>
				<a href="@Url.Action("Datenschutz")">Datenschutz</a>
			</div>
		</div>

	</footer>



	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="Scripts/umd/popper.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script type="text/javascript" src="js/bootstrap/bootstrap-dropdown.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			/////// Prevent closing from click inside dropdown
			document.querySelectorAll('.dropdown-menu').forEach(function (element) {
				element.addEventListener('click', function (e) {
					e.stopPropagation();
				});
			})
		});

	</script>
	@RenderSection("Scripts", required: false)
</body>

</html>
