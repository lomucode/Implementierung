@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{ ViewData["Title"] = "Index"; }




<div class="container-fluid" style="padding-bottom: 200px; background-color: #F4F8FB;">
    <h1 style="padding-top: 20px; padding-bottom: 5px;">Einstellungen</h1>
    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
<p>No users</p> }
else
{
<table class="table">
    <thead class="bg-dark text-white">
        <tr>
            <th>Benutzer</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
<tr>
    <td>@u.UserName</td>
    <td>
        <a class="btn btn-secondary"
           asp-route-userId="@u.Id"
           asp-action="Details">Details</a>


    </td>
</tr>
}
    </tbody>
</table>    }
        </div>
    </div>
</div>