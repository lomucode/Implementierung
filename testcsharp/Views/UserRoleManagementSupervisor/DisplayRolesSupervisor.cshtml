@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{ ViewData["Title"] = "All Roles"; }







<div class="container-fluid" style="background-color: #F4F8FB; min-height: 600px;">
    <h1 style="padding-top: 20px; padding-bottom: 20px;">Rollen verwalten</h1>
    <div class="row">
        <div class="col-6">
            <form asp-action="AddRole" method="Post">
                <div class="form-group">
                    <input type="text" id="role" name="role" class="form-control" placeholder="Neue Rolle eingeben" />
                    <br />
                    <input type="submit" value="Erstellen" class="btn btn-outline-primary btn-block" />
                    <a asp-action="Index" class="btn btn-outline-danger btn-block">Abbrechen</a>
                </div>
            </form>
        </div>


        <div class="col-6" style="border-left:1px solid black;">
            
            @if (Model.Count == 0)
            {
<p>No roles found!</p> }
else
{
<table class="table">
    <thead class="bg-dark text-white">
        <tr>
            <th>Rolle</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
<tr>
    <td>@r.Name</td>
    <td>
        <a class="btn btn-outline-danger"
           asp-route-role="@r.Name"
           asp-action="RemoveRole"
           onclick="return confirm('Are you sure to remove this role')">Rolle entfernen</a>
    </td>
</tr>
}
    </tbody>
</table>}
        </div>
    </div>
</div>